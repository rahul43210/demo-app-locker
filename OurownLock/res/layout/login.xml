<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />
    <ImageView
    android:id="@+id/img"
    android:src="@drawable/image47"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:gravity="fill">
    
      <TextView
        android:id="@+id/meta"
        android:text="METAOPTION"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="10pt"/>
   
        <TextView
        android:id="@+id/u_name"
        android:layout_below="@id/meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="10pt"
        android:text="UserName" />



     <EditText
         android:id="@+id/editText1"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/u_name"
         android:layout_below="@id/meta"
         android:layout_toRightOf="@id/u_name"
         android:inputType="text"
         android:padding="5dp" >
        
     </EditText>
    
     <TextView
        android:id="@+id/p_word"
        android:layout_below="@id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="10pt"
        android:text="Password" />



     <EditText
         android:id="@+id/editText2"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/p_word"
         android:layout_below="@+id/u_name"
         android:layout_toRightOf="@+id/u_name"
         android:inputType="textPassword"
         android:padding="5dp" >

     </EditText>

 <Button
     android:id="@+id/button1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/p_word"
     android:layout_marginTop="27dp"
     android:layout_toRightOf="@id/p_word"
     android:text="LOGIN" />
 
 
 </RelativeLayout>
 

</LinearLayout>